<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecolift">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".viewModels.EcoliftApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecolift"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivities.ProfileMenuActivity"
            android:exported="false" />
        <activity
            android:name=".BookRideActivities.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".StartActivities.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".BookRideActivities.BookActivity"
            android:exported="false" />
        <activity
            android:name=".PostRideActivities.PostActivity"
            android:exported="false" />
        <activity
            android:name=".StartActivities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".StartActivities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivities.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>